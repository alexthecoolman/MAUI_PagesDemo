    <ContentPage Title="Page 3" IconImageSource="dotnet_bot.svg">
        <Label 
            VerticalOptions="Center"
            HorizontalOptions="Center"
            HeightRequest="50"
            WidthRequest="300"
            FontSize="30"
            Text="La troisième page"/>
    </ContentPage>

</TabbedPage>
